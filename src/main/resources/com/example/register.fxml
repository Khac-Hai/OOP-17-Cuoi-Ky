<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.RegisterController"
      alignment="CENTER" spacing="20" prefWidth="500" prefHeight="200">

   <!-- Logo section -->
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images-3.png" />
      </image>
   </ImageView>

   <!-- Title -->
   <Text text="Đăng ký" fill="#0598ff" style="-fx-font-size: 20px;" />

   <!-- Username input -->
   <HBox alignment="CENTER" spacing="10">
      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images-2.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtUsername" promptText="Tên đăng ký" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px; -fx-font-size: 14px;" />
   </HBox>

   <!-- Password input -->
   <HBox alignment="CENTER" spacing="10">
      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="txtPassword" promptText="Mật khẩu" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px; -fx-font-size: 14px;" />
   </HBox>

   <!-- Re-enter Password input -->
   <HBox alignment="CENTER" spacing="10">
      <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images-4.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtRePassword" promptText="Nhập lại mật khẩu" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px; -fx-font-size: 14px;" />
   </HBox>

   <!-- Register button -->
   <Button text="Đăng ký" style="-fx-background-color: #0598ff; -fx-font-size: 16px;" onAction="#onSubmit" prefWidth="120.0" prefHeight="40.0"/>

</VBox>
